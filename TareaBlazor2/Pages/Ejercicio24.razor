    <input type="number" @bind="input3" class="input-matriz" />
    <input type="number" @bind="input4" class="input-matriz" />
</div>

<div>
    <input type="number" @bind="input5" class="input-matriz" />
    <input type="number" @bind="input6" class="input-matriz" />
    <input type="number" @bind="input7" class="input-matriz" />
    <input type="number" @bind="input8" class="input-matriz" />
</div>

<div>
    <input type="number" @bind="input9" class="input-matriz" />
    <input type="number" @bind="input10" class="input-matriz" />
    <input type="number" @bind="input11" class="input-matriz" />
    <input type="number" @bind="input12" class="input-matriz" />
</div>

<div>
    <input type="number" @bind="input13" class="input-matriz" />
    <input type="number" @bind="input14" class="input-matriz" />
    <input type="number" @bind="input15" class="input-matriz" />
    <input type="number" @bind="input16" class="input-matriz" />
</div>

<p>Resultado (Columna donde se encuentra el mayor número): @resultadoPosicion</p>

<button @onclick="BuscarMayorEnMatriz" class="btn-calcular">Buscar Mayor</button>

