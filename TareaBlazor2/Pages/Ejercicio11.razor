@page "/ejercicio/11"

<PageTitle>Ejercicio 11</PageTitle>

<h2>Ejercicio 11: Verificar si el primer dígito es igual al último</h2>

<p>Ingresa un número entero:</p>
<input @bind="numero" type="number" />

<p>Resultado: @resultadoPrimerUltimoDigito</p>

<button @onclick="VerificarPrimerUltimoDigito" class="btn-calcular">Verificar Dígitos</button>

<a href="/menu-ejercicios" class="btn-volver">Volver al Menú de Ejercicios</a>

<style>
    .btn-volver {
        background-color: #e74c3c;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1em;
        display: inline-block;
        margin-top: 20px;
    }

        .btn-volver:hover {
            background-color: #c0392b;
        }

    .btn-calcular {
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1em;
        margin-top: 10px;
        margin-right: 10px;
    }

        .btn-calcular:hover {
            background-color: #2980b9;
        }
</style>

@code {
    private int numero;
    private int resultadoPrimerUltimoDigito;

    private void VerificarPrimerUltimoDigito()
    {
        resultadoPrimerUltimoDigito = EsPrimerIgualUltimoDigito(numero) ? 1 : 0;
    }

    private bool EsPrimerIgualUltimoDigito(int num)
    {
        // Convertimos el número a positivo y a string para extraer sus dígitos
        string numStr = Math.Abs(num).ToString();

        // Verificamos si el primer y último dígito son iguales
        return numStr[0] == numStr[numStr.Length - 1];
    }
}
