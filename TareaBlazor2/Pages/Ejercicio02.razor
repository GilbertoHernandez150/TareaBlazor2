@page "/ejercicio/2"

<PageTitle>Ejercicio 2</PageTitle>

<h2>Ejercicio 2: Contar la cantidad de dígitos de un entero</h2>

<p>Ingresa un número entero:</p>
<input @bind="numero" type="number" />

<p>La cantidad de dígitos es: @cantidadDigitos</p>

<button @onclick="ContarDigitos" class="btn-calcular">Contar Dígitos</button>

<a href="/menu-ejercicios" class="btn-volver">Volver al Menú de Ejercicios</a>

<style>
    .btn-volver {
        background-color: #e74c3c;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1em;
        display: inline-block;
        margin-top: 20px;
    }

        .btn-volver:hover {
            background-color: #c0392b;
        }

    .btn-calcular {
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1em;
        margin-top: 10px;
        margin-right: 10px;
    }

        .btn-calcular:hover {
            background-color: #2980b9;
        }
</style>

@code {
    private int numero;
    private int cantidadDigitos;

    private void ContarDigitos()
    {
        cantidadDigitos = ContarCantidadDeDigitos(numero);
    }

    private int ContarCantidadDeDigitos(int num)
    {
        // Convertimos el número a positivo en caso de ser negativo
        return num == 0 ? 1 : Math.Abs(num).ToString().Length;
    }
}
