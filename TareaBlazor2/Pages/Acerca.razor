@page "/acerca"

<h2>Acerca de Mí</h2>
<img src="images/Mifoto.jpg" alt="Foto del estudiante" width="150" height="150" />
<p>Esta tarea ha sido realizada por Gilberto Hernandez.</p>
<p>Email: ghernandezds@gmail.com</p>
<p>Puedes contactarme vía WhatsApp o Telegram haciendo clic en los botones de abajo:</p>

<button @onclick="ContactarPorWhatsapp">Contactar por WhatsApp</button>
<button @onclick="ContactarPorTelegram">Contactar por Telegram</button>

<style>
    img {
        border-radius: 50%;
        border: 2px solid #3498db;
    }
</style>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; }

    private void ContactarPorWhatsapp()
    {
        var mensaje = "Hola, te contacto para un trabajo bueno. Te pagaremos mucho dinero.";
        var url = $"https://wa.me/18099822176?text={Uri.EscapeDataString(mensaje)}";
        Navigation.NavigateTo(url, true);
    }

    private void ContactarPorTelegram()
    {
        var mensaje = "Hola, te contacto para un trabajo bueno. Te pagaremos mucho dinero.";
        var url = $"https://t.me/share/url?url=t.me/18099822176&text={Uri.EscapeDataString(mensaje)}";
        Navigation.NavigateTo(url, true);
    }
}

